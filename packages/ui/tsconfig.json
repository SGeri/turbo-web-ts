{
  "$schema": "https://json.schemastore.org/tsconfig",
  "display": "Next.js",

  "compilerOptions": {
    "target": "es5",
    "lib": ["dom", "dom.iterable", "esnext"],
    "allowJs": true,
    "skipLibCheck": true,
    "strict": true,
    "forceConsistentCasingInFileNames": true,
    "noEmit": true,
    "incremental": true,
    "esModuleInterop": true,
    "module": "esnext",
    "isolatedModules": true,
    "jsx": "preserve"
  },

  "include": ["."],
  "exclude": ["dist", "build", "node_modules"]
}
